<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ComplianceForm">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="40dp"
        android:text="Vendor Compliance"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:text="Sub Contractor Name"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content">
                </TextView>
                <Spinner
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </Spinner>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Email"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp"
                        android:textSize="25dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <EditText
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:inputType="textEmailAddress"
                        android:layout_height="wrap_content">
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Project"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Spinner
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Year"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Spinner
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Month"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Spinner
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </Spinner>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Head Count(Month wise)(Nos.)"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="25dp"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:inputType="number"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:text="Work Status"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
            </TextView>
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:id="@+id/app_not_app"
                android:clickable="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/comp_status_app"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Applicable"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/comp_status_not_app"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:text="Not Applicable"
                        android:layout_height="wrap_content">
                    </CheckBox>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:id="@+id/comp_list_form"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Compliance-1"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="Form XIII (Register Of Workman employed by Contractor)*"
                            android:textColor="#000"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/comp1_status"
                                android:text="Not applicable"
                                android:textSize="20dp"
                                android:layout_height="wrap_content">
                            </CheckBox>
                            <Button
                                android:id="@+id/comp1_file_btn"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Select file"
                                android:layout_height="wrap_content">
                            </Button>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/comp1_path"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="Compliance-2"
                        android:layout_marginLeft="5dp"
                        android:textSize="25dp"
                        android:textColor="#000"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="Form XIV (Employment Card)"
                            android:textColor="#000"
                            android:layout_height="wrap_content">
                        </TextView>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/comp2_status"
                                android:text="Not applicable"
                                android:textSize="20dp"
                                android:layout_height="wrap_content">
                            </CheckBox>
                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/comp2_file_btn"
                                android:text="Select file"
                                android:layout_height="wrap_content">
                            </Button>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/comp2_path"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>